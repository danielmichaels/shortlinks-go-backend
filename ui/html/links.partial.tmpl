{{define "links"}}
  <!-- This example requires Tailwind CSS v2.0+ -->
  <div class="px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center">
      <div class="sm:flex-auto">
        <section class="pb-5">
          <h2 class="text-2xl font-bold text-center">
            Previous
            <span class="text-yellow-400">
            Links
          </span>
          </h2>
          <p class="text-center pt-2">Links are kept in localstorage</p>
        </section>
      </div>
    </div>
    <div x-data="{ hashes: [] }" x-init="hashes = getLinks()">
      <div class="mt-8 flex flex-col">
        <div class="-mt-2 mb-5 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
            <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
              <table class="min-w-full divide-y divide-gray-300">
                <thead class="bg-gray-50">
                <tr>
                  <th scope="col"
                      class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">
                    Original URL
                  </th>
                  <th scope="col"
                      class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                    Short URL
                  </th>
                  <th scope="col"
                      class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                    Copy Link
                  </th>
                  <th scope="col"
                      class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                    Analytics
                  </th>
                </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-white">
                <template x-for="hash in hashes.reverse()" :key="hash.hash">
                  <tr>
                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                      <span x-text="hash.long_url"></span>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <span x-text="hash.short_url"></span>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <span x-text="hash.short_url"></span>
                    </td>
                    <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                      <a :href="`${hash.short_url}/analytics`"
                         class="text-indigo-600 hover:text-indigo-900">Link</a>
                    </td>
                  </tr>
                </template>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      function getLinks() {
          return JSON.parse(localStorage.getItem("hashes"))
      }
  </script>
{{end}}
